<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp">


    <RelativeLayout
        android:background="@drawable/iteams_ripple"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ImageView
        android:id="@+id/profileListIcon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp">
    </ImageView>

    <com.google.android.material.textview.MaterialTextView
        android:textSize="@dimen/_14sdp"
        android:id="@+id/ProfileListText"
        android:layout_toRightOf="@+id/profileListIcon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:fontFamily="sans-serif"
        android:textColor="@color/carbon_black_54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/MyPostCounter"
        android:visibility="gone"
        android:textSize="@dimen/_10sdp"
        android:background="@drawable/iteams_length"
        android:text="00"
        android:textColor="@color/carbon_white"
        android:padding="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.google.android.material.textview.MaterialTextView>

    </RelativeLayout>
</RelativeLayout>