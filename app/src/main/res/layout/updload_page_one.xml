<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductUpload.UpdloadPageOne">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/SelectCatagoryToolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/back_arraw"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp">

                </ImageView>

            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/carbon_black_87"
                android:layout_gravity="center_vertical"
                android:text="Select Your Catagory"
                android:layout_height="wrap_content">

            </com.google.android.material.textview.MaterialTextView>


        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/SelectCatagoryToolbarID">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/CardView"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/AddPostIcon"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/add_post_colour"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp">

                </ImageView>

                <RelativeLayout
                    android:layout_toRightOf="@+id/AddPostIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:text="How to upload your product?"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/carbon_black_87"
                            android:layout_height="wrap_content">
                        </com.google.android.material.textview.MaterialTextView>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:text="Click here know about the condition how to upload your post"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/carbon_black_54"
                            android:layout_height="wrap_content">
                        </com.google.android.material.textview.MaterialTextView>


                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <FrameLayout
            android:id="@+id/CatagoryFrameID"
            android:layout_below="@id/CardView"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>




    </RelativeLayout>


</RelativeLayout>