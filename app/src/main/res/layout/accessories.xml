<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobilePage.Accessories">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/TablesToolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_5ssp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/back_arraw">

                </ImageView>

            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_12sdp"
                android:text="Accessories"
                android:textColor="@color/carbon_black_87"
                android:textSize="@dimen/_14sdp">

            </com.google.android.material.textview.MaterialTextView>

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>


    <ScrollView
        android:layout_below="@+id/TablesToolbarID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/TitleBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/CategoryID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SELECTED CATEGORY"
                        android:textColor="@color/carbon_black_54"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile / Accessories">

                        </com.google.android.material.textview.MaterialTextView>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Change"
                            android:textColor="@color/carbon_black_87">

                        </com.google.android.material.textview.MaterialTextView>

                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/carbon_tab_text_unselected">

                </View>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/DetailsNox"
                android:layout_below="@+id/CategoryID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/carbon_black_54">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INCLUDE SOME DETAILS"
                        android:textColor="@color/carbon_black_54"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Condition *">

                    </com.google.android.material.textview.MaterialTextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:background="@drawable/radiobutton_unselected">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="New">

                                </com.google.android.material.textview.MaterialTextView>

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/radiobutton_unselected">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="Used">

                                </com.google.android.material.textview.MaterialTextView>

                            </RelativeLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Type *">

                    </com.google.android.material.textview.MaterialTextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:background="@drawable/radiobutton_unselected">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="Apple">

                                </com.google.android.material.textview.MaterialTextView>

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/radiobutton_unselected">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="Tablets">

                                </com.google.android.material.textview.MaterialTextView>

                            </RelativeLayout>


                        </LinearLayout>




                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Add title *">

                    </com.google.android.material.textview.MaterialTextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:background="@drawable/radiobutton_unselected"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_13sdp">


                    </EditText>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="Mention the key features of your item (e.d. brand, model, age, type)">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Descripition *">

                    </com.google.android.material.textview.MaterialTextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:background="@drawable/radiobutton_unselected"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_13sdp"></EditText>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="Include condition, fetures and reson for selling">

                    </com.google.android.material.textview.MaterialTextView>


                </LinearLayout>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/PriceBox"
                android:layout_below="@+id/DetailsNox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/carbon_tab_text_unselected">

                </View>

                <LinearLayout
                    android:padding="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SET A PRICE"
                        android:textColor="@color/carbon_black_54"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Price *">

                    </com.google.android.material.textview.MaterialTextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:background="@drawable/radiobutton_unselected"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_13sdp">


                    </EditText>

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ImageBox"
                android:layout_below="@+id/PriceBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/carbon_tab_text_unselected">

                </View>

                <LinearLayout
                    android:padding="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UPLOAD UP TO 4 PHOTOS"
                        android:textColor="@color/carbon_black_54"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:background="@drawable/add_photos_box">

                            <ImageView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/add_photos">

                            </ImageView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/add_photos_box">

                            <ImageView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/add_photos">

                            </ImageView>

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:background="@drawable/add_photos_box">

                            <ImageView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/add_photos">

                            </ImageView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/add_photos_box">

                            <ImageView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/add_photos">

                            </ImageView>

                        </RelativeLayout>

                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/carbon_red_400"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="This fields is mandatory">

                    </com.google.android.material.textview.MaterialTextView>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LocationID"
                android:layout_below="@+id/ImageBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/carbon_tab_text_unselected">

                </View>

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONFRIM YOUR LOCATION"
                        android:textColor="@color/carbon_black_54"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>


                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="State *">

                    </com.google.android.material.textview.MaterialTextView>

                    <RelativeLayout
                        android:background="@drawable/radiobutton_unselected"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/SpinerState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </Spinner>

                    </RelativeLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="City *">

                    </com.google.android.material.textview.MaterialTextView>

                    <RelativeLayout
                        android:visibility="visible"
                        android:background="@drawable/radiobutton_unselected"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/CityesID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </Spinner>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/MyInfo"
                android:layout_below="@+id/LocationID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/carbon_black_54">

                </View>

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INCLUDE SOME DETAILS"
                        android:textColor="@color/carbon_black_54"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>


                    <RelativeLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ProfileImageID"
                            android:background="@drawable/placeholder_oval"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp">

                        </de.hdodenhof.circleimageview.CircleImageView>

                        <RelativeLayout
                            android:layout_toRightOf="@+id/ProfileImageID"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">



                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:text="Name">

                                </com.google.android.material.textview.MaterialTextView>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5ssp"
                                    android:background="@drawable/radiobutton_unselected"
                                    android:padding="@dimen/_10sdp"
                                    android:singleLine="true"
                                    android:hint="Username"
                                    android:textSize="@dimen/_13sdp">


                                </EditText>

                            </LinearLayout>

                        </RelativeLayout>


                    </RelativeLayout>


                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Mobile Phone Number *">

                    </com.google.android.material.textview.MaterialTextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:background="@drawable/radiobutton_unselected"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_13sdp">


                    </EditText>

                    <Switch
                        android:text="Ergetnt"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:layout_gravity="end"
                        android:textColor="@color/carbon_black_54"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Switch>

                    <Switch
                        android:text="doorstep delivery"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:layout_gravity="end"
                        android:textColor="@color/carbon_black_54"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Switch>

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/MyInfo"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/Box"
                    android:padding="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/PostButton"
                        android:background="@drawable/post_button_back"
                        android:layout_width="match_parent"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_height="@dimen/_40sdp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:text="Post Now"
                            android:textColor="@color/carbon_black_54"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </com.google.android.material.textview.MaterialTextView>

                    </RelativeLayout>

                </LinearLayout>



                <RelativeLayout
                    android:layout_below="@+id/Box"
                    android:layout_width="match_parent"
                    android:background="@color/carbon_blueGrey_900"
                    android:layout_height="@dimen/_35sdp">

                    <com.google.android.material.textview.MaterialTextView
                        android:textSize="@dimen/_12sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/carbon_white"
                        android:text="Free Classifieds in Paskitan &amp; UAE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </com.google.android.material.textview.MaterialTextView>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>