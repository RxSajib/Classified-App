<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Catagory.SubCatagory">



    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/CatagoryToolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/back_arraw"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp">
                </ImageView>


            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/CatagoryName"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/carbon_black_87"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.google.android.material.textview.MaterialTextView>


        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/CatagoryListID"
        android:layout_width="match_parent"
        android:layout_below="@+id/CatagoryToolbarID"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>